.project-slideshow
{
position:fixed;
left:150px;
top: 1px;
padding-top:0px;
padding-left:0px;
}

.project-slideshow li
{
float:left;
border-top:3px solid #4762B3;
margin-top:16px;
padding-top:2px;

}

.project-slideshow div
{
vertical-align:bottom;
z-index:100;
width:20px;
height:20px;
background: url(<%=image_path "icons/wheel.png" %>) no-repeat;
background-size: contain;
margin-left:10px;
opacity:0.7;
}

.project-slideshow li:nth-child(1) div
{
margin-left:0px;
}

.project-slideshow li.selected div
{
	opacity:1;
	border:0px solid;
	border-radius:10px;
	background:#000;
}
.project-slideshow li div:hover
{
	cursor:pointer;
}

.project-slideshow li:not(.selected) div:hover
{
opacity:1;
}

.project-slideshow li.selected span
{
opacity:1;
}

.project-slideshow li.selected .video
{
display:block;
}

.project-slideshow li span
{
z-index:-10;
position:fixed;
top:0px;
bottom:0px;
left:0px;
right:0px;
background-size: cover;
background-position: 50% 50%;
background-repeat: none;
opacity:0;
-webkit-transition: opacity .6s ease-in-out;
-moz-transition: opacity .6s ease-in-out;
-o-transition: opacity .6s ease-in-out;
-ms-transition: opacity .6s ease-in-out;
transition: opacity .6s ease-in-out;


}

.project-slideshow li .video
{
display:none;
position:absolute;

top:150px;
bottom:0px;
left:200px;
right:0px;

}



