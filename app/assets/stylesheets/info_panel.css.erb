.info_panel
{
	position: fixed;
	right:110px;
	bottom:0px;
	width:300px;
	height:80px;
	background: #FFFFFF;
	-webkit-transition: height .6s ease-in-out;
	-moz-transition: height .6s ease-in-out;
	-o-transition: height .6s ease-in-out;
	-ms-transition: height .6s ease-in-out;
	transition: height .6s ease-in-out;
	outline: 2px solid black;
}

.info_panel .ip_content
{
    padding:10px;
	font-family: 'Helvetica';
	font-size:16px;
	line-height:1.2;
    
}


.info_panel .ip_icon
{
    position:absolute;
    background: url(<%=image_path "icons/ticket.png" %>) no-repeat;
background-size: contain;
    height:50px;
    width:50px;
    top:8px;
    right:8px;
}

.info_panel .ip_title
{
	background:#C8C8C8;
	font-size: 26px;
	outline: 2px solid black;
	padding:5px;

}
.info_panel .ip_content a
{
	color:#0000FF;
}

.info_panel:hover
{
	height:400px;
}
