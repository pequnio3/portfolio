.content_viewer .selectable_nav .logo_hook
{
	background: url(<%=image_path "icons/logo_hook.png"%>) no-repeat;
	background-size:contain;
	float:left;
	opacity:0;
	margin-right:4px;
	margin-top:4px;
	width:24px;
	height:12px;

    -webkit-transition: opacity .25s ease-in;
    -moz-transition: opacity .25s ease-in;
    -o-transition: opacity .25s ease-in;
    -ms-transition: opacity .25s ease-in;
    transition: opacity .25s ease-in;
}

.content_viewer .selectable_nav li.selected
{
	opacity:1;
}
.content_viewer .selectable_nav li.selected .logo_hook
{
	opacity:1;
}

.content_viewer .selectable_nav li 
{
	opacity:0.7;
    -webkit-transition: opacity .1s ease-in;
    -moz-transition: opacity .1s ease-in;
    -o-transition: opacity .1s ease-in;
    -ms-transition: opacity .1s ease-in;
    transition: opacity .1s ease-in;
}


.content_viewer .selectable_nav li:hover
{
	opacity:1;
}


.content_viewer
{
    
    position:relative;
    overflow:visible;
    height:100%;
    width:100%;
}
.content_viewer .viewable_content h1
{
	font-size:40px;
	font-weight:bold;
	margin-bottom:10px;
}
.content_viewer .viewable_content
{
	
position:absolute;
    opacity:0;
    visibility:hidden;
    -webkit-transition: opacity .6s ease-in-out;
    -moz-transition: opacity .6s ease-in-out;
    -o-transition: opacity .6s ease-in-out;
    -ms-transition: opacity .6s ease-in-out;
    transition: opacity .6s ease-in-out;
}
.content_viewer .viewable_content.selected
{
    opacity:1;
    visibility:visible;

}


.content_viewer ul li
{
    float:left;
    margin-right:45px;
}



.content_viewer .selectable_nav

{
position:relative;
}
.content_viewer .selectable_nav li
{
    float:left;
    margin-right:45px;
    margin-top:8px;
    margin-bottom:37px;
    cursor:pointer;
}
